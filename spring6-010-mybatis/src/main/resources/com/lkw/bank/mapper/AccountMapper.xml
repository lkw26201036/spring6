<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lkw.bank.mapper.AccountMapper">
    <select id="selectByActno" resultType="com.lkw.bank.pojo.Account">
        select * from t_act where actno = #{actno}
    </select>
    <delete id="deleteByActno">
        delete from t_act where actno = #{act_no}
    </delete>
    <update id="update">
        update t_act set balance = #{balance} where actno = #{actno}
    </update>

    <insert id="insert">
        insert into t_act values(#{actno},#{balance})
    </insert>

    <select id="selectAll" resultType="com.lkw.bank.pojo.Account">
        select * from t_act
    </select>
</mapper>

    